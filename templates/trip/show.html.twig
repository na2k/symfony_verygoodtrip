{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
    <h1>Détails du Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ trip.dateStart ? trip.dateStart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ trip.dateEnd ? trip.dateEnd|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Intitulé</th>
                <td>{{ trip.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trip.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ trip.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('trip_index') }}">Retour à la liste</a>

    <a class="btn btn-primary" href="{{ path('trip_edit', {'id': trip.id}) }}">Modifier</a>

    {{ include('trip/_delete_form.html.twig') }}
{% endblock %}
